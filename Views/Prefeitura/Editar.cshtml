
@{
    ViewBag.Title = "Editar";
    Layout = null;
}

@Html.Partial("_PartialPrefeitura")


@section scripts{

    <script src="~/Scripts/jquery.maskedinput.js"></script>
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    <script src="~/Scripts/templateConveniadas.js"></script>

    <script type="text/javascript">
        $(function () {
            $.mask.definitions['~'] = "[+-]";
            $("#date").mask("99/99/9999", { placeholder: "mm/dd/yyyy", completed: function () { alert("completed!"); } });
            $("#cnpj").mask("99.999.999/9999-99");
            $("#cep").mask("99999-999");
            $("#tel1").mask("(99)9999-9999");
            $("#tel2").mask("(99)9999-9999");
            $("#cel").mask("(99)99999-9999");
            $("#preco").maskMoney({ prefix: 'R$ ', thousands: '.', decimal: ',', affixesStay: true });
            $("#cep2").mask("99999-999");

            $("#tableTotalAlunos").keyup(function () {
                debugger;
                var a = 0;
                var b = 0;
                var c = 0;
                var d = 0;

                if ($("#totalInfantil").val() != "")
                    a = parseInt($("#totalInfantil").val());
                if ($("#totalFund1").val() != "")
                    b = parseInt($("#totalFund1").val());
                if ($("#totalFund2").val() != "")
                    c = parseInt($("#totalFund2").val());
                if ($("#totalMedio").val() != "")
                    d = parseInt($("#totalMedio").val());

                var total = a + b + c + d;
                $("#totalAlunos").val(total);
            });
        });

    </script>

}
