                    {
                        @Html.TextBoxFor(x => x.DataCadastro, new { @class = "form-control input-sm datepicker", maxlength = "10", type = "text", name = "datepicker", id = "datepicker", Value = DateTime.Now.ToString("dd/MM/yyy") })
