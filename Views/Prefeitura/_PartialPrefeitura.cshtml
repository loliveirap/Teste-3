                    @if (ViewBag.Title == "Editar")
                    {
                        @Html.TextBoxFor(x => x.DataCadastro, new { @class = "form-control input-sm datepicker", maxlength = "10", type = "text", id = "date", disabled = "disabled" })
                    }
                </div>
